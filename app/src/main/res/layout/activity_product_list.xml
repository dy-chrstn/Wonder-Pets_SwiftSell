<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue"
    tools:context=".ProductListActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/categorySoldText"
        android:background="@color/light_yellow"
        android:elevation="6dp"
        android:inputType="text"
        android:queryHint="Search Name or Barcode"/>

    <TextView
        android:id="@+id/categorySoldText"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="wrap_content"
        android:text="Category Sold"
        android:textSize="30sp"
        android:textColor="@color/light_yellow"
        app:layout_constraintBottom_toTopOf="@id/soldLinearLayout"
        app:layout_constraintTop_toBottomOf="@id/searchView"/>

    <LinearLayout
        android:id="@+id/soldLinearLayout"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/categorySoldText"
        app:layout_constraintBottom_toTopOf="@id/horizontalScroll"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:backgroundTint="@color/light_yellow"
            android:layout_weight="1"
            android:layout_height="75dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"> <!-- Updated gravity attribute -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_margin="7dp"
                        android:textSize="17sp"
                        android:text="Items Sold:"
                        android:fontFamily="@font/raleway_extrabold"
                        android:textColor="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/itemSoldTv"
                        android:text="0"
                        android:textSize="17sp"
                        android:layout_marginStart="60dp"
                        android:textColor="@color/blue"
                        android:fontFamily="@font/raleway_extrabold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"/> <!-- Added gravity attribute -->

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="15dp"
            android:layout_height="0dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:backgroundTint="@color/light_yellow"
            android:layout_weight="1"
            android:layout_height="75dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_margin="7dp"
                    android:text="Sales:"
                    android:textSize="17sp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/raleway_extrabold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/salesTv"
                    android:text="0.00"
                    android:textSize="17sp"
                    android:fontFamily="@font/raleway_extrabold"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="60dp"
                    android:textColor="@color/blue"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"/> <!-- Added gravity attribute -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/soldLinearLayout"
        app:layout_constraintBottom_toTopOf="@id/recyclerViewProducts">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:singleSelection="true"
            app:layout_constraintEnd_toEndOf="@id/horizontalScroll"
            app:layout_constraintStart_toStartOf="@id/horizontalScroll"
            app:layout_constraintTop_toTopOf="@id/horizontalScroll">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:layout_marginEnd="8dp"
                android:paddingStart="0dp"
                android:paddingTop="8dp"
                android:paddingEnd="6dp"
                android:paddingBottom="8dp"
                app:rippleColor="@color/yellow"
                android:textColor="@color/blue"
                android:backgroundTint="@color/light_yellow"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:clickable="true"
                android:focusable="true" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalScroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/light_yellow"
        android:contentDescription="@string/press_to_navigate_in_product_form"
        android:elevation="6dp"
        android:src="@drawable/baseline_add_24"
        app:layout_anchor="@id/recyclerViewProducts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recyclerViewProducts"
        app:pressedTranslationZ="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
