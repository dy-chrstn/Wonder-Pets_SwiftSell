<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionActivity">

    <RelativeLayout
        android:orientation="horizontal"
        android:background="@color/blue"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:src="@drawable/back"
            android:contentDescription="@string/press_to_go_back_from_previous_activity"
            android:background="@android:color/transparent"
            android:layout_alignParentStart="true"
            android:layout_width="48dp"
            android:layout_centerVertical="true"
            android:layout_height="48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/raleway_extrabold"
            android:text="@string/transaction"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageButton
            android:src="@drawable/edit"
            android:background="@android:color/transparent"
            android:contentDescription="@string/change_username_and_password"
            android:layout_width="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_height="48dp"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/light_yellow"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:fontFamily="@font/raleway_extrabold"
            android:textColor="@color/blue"
            android:gravity="center"
            android:text="Customer No. 1"
            android:textSize="15sp" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/barcode"
                    android:background="@drawable/border_blue"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/blue"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:background="@drawable/border_blue"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/blue"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/quantity"
                    android:background="@drawable/border_blue"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/blue"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/price"
                    android:background="@drawable/border_blue"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/blue"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/total"
                    android:background="@drawable/border_blue"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/blue"/>
            </TableRow>
        </TableLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTransaction"
            android:layout_width="match_parent"
            android:layout_height="210dp"/>
    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/light_yellow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/total"
                android:textColor="@color/light_yellow"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text="0"
                android:textColor="@color/light_yellow"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/amount"
                android:textColor="@color/light_yellow"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/AmountPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_yellow"
                android:textColorHint="@color/light_yellow"
                android:layout_weight="2"
                android:gravity="right"
                android:textSize="20sp"
                android:hint="0"
                android:textColor="@color/light_yellow" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/change"
                android:textColor="@color/light_yellow"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/changeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="20sp"
                android:gravity="right"
                android:text="0"
                android:textColor="@color/light_yellow" />
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/light_yellow"
            android:text="@string/save"
            android:textColor="@color/blue" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/light_yellow"
            android:text="@string/cancel"
            android:textColor="@color/blue" />

    </androidx.appcompat.widget.LinearLayoutCompat>




</LinearLayout>